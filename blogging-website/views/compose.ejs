<%- include("partials/header") %> 

<h1>Compose </h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="formGroupExampleInput" class="form-label">Title</label>
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="" name="newPostTitle">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput" class="form-label">Post</label>
        <textarea type="text" class="form-control" id="formGroupExampleInput" placeholder="" name="newPostBody" cols="40" rows="5"></textarea>
    </div>
<button type="submit" class="btn btn-primary">Publish</button>
</form>

